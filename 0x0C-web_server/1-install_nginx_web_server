#!/usr/bin/env bash

# Update the package repository and install Nginx
apt update
apt install -y nginx

# Create a default Nginx configuration file to listen on port 80
cat <<EOL > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;
    server_name _;
    
    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOL

# Create an HTML file with "Hello World!" content
echo "Hello World!" > /var/www/html/index.html

# Restart Nginx to apply the changes
service nginx restart

# Exit the script
exit 0

